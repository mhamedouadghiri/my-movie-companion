<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.mhamed.mymoviecompanion.model.ImageSizeType" />

        <variable
            name="cast"
            type="com.mhamed.mymoviecompanion.model.Cast" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_xsmall"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cast_image"
            android:layout_width="@dimen/dimens_cast_width"
            android:layout_height="@dimen/dimens_cast_height"
            android:contentDescription="@string/cast_image"
            android:scaleType="centerCrop"
            app:imagePath="@{cast.profileImagePath}"
            app:imageSizeType="@{ImageSizeType.PROFILE}" />

        <TextView
            android:id="@+id/cast_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{cast.name ?? @string/empty}"
            android:textAlignment="center"
            android:textColor="@color/colorText" />
    </LinearLayout>
</layout>
