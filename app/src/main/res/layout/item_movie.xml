<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.mhamed.mymoviecompanion.model.ImageSizeType" />

        <variable
            name="movie"
            type="com.mhamed.mymoviecompanion.model.Movie" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_xsmall"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="@dimen/dimens_poster_width"
            android:layout_height="@dimen/dimens_poster_height"
            android:contentDescription="@string/movie_poster"
            android:scaleType="centerCrop"
            app:imagePath="@{movie.posterPath}"
            app:imageSizeType="@{ImageSizeType.POSTER}" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{movie.title ?? @string/empty}"
            android:textAlignment="center"
            android:textColor="@color/colorText" />
    </LinearLayout>
</layout>
