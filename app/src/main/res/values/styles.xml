<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/colorViolet</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/colorViolet</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGrayLight</item>
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="android:progressTint">@color/colorBlue</item>
    </style>
</resources>